<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      {{#if hasError}}
      <div class="row">
        <div class="col-xs-12">
          <p class="error-message">{{fa-icon "exclamation-triangle"}}{{errorMessage}}</p>
        </div>
      </div>
      {{/if}}
      {{#if (eq form 'login')}}
      <form class="login-register-form" {{action 'authenticate' on='submit'}}>
        <div class="row">
          <div class="col-xs-12">
            <h1 class="form-title">Login</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
              {{input id='email' class='form-control' type='email' placeholder='Email' value=email}}
              {{input id='password' class='form-control' type='password' placeholder='Password'value=password}}
            <button class="form-button" type="submit">Login</button>
            <h5 class="form-link" {{action 'setForm' 'register'}}>Create Account</h5>
          </div>
        </div>
      </form>
      {{/if}}
      {{#if (eq form 'register')}}
      <form class="login-register-form" {{action 'register' on='submit'}}>
        <div class="row">
          <div class="col-xs-12">
            <h1 class="form-title">Create Account</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            {{input class='form-control' type='text' placeholder='Name' value=name}}
            {{input class='form-control' id="username" type='email' placeholder='Email' value=email}}
            {{input class='form-control' type='password' placeholder='Password'value=password}}
            {{input class='form-control' type='password' placeholder='Confirm Password'value=confurm_password}}
            <button class="form-button" type="submit">Create Account</button>
            <h5 class="form-link" {{action 'setForm' 'login'}}>Login</h5>
          </div>
        </div>
      </form>
      {{/if}}
    </div>
  </div>
</div>
